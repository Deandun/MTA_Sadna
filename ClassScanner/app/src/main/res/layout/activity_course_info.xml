<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CourseInfoActivity">
   <!-- tools:context="com.example.galbenabu1.classscanner.Activities.MainActivity">
-->
 <TextView
     android:id="@+id/tvCourseInfoTitle"
     android:layout_width="180dp"
     android:layout_height="51dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="24dp"
     android:text="Course Info"
     android:textAppearance="@style/TextAppearance.AppCompat.Display1"
     android:textColor="@color/colorAccent"

     android:visibility="visible"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:id="@+id/tv_course_name"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:textColor="@color/colorAccent"
     android:layout_marginLeft="16dp"
     android:layout_marginTop="92dp"
     android:text="Course name"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:id="@+id/tv_course_creation_date"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:textColor="@color/colorAccent"
     android:layout_marginLeft="16dp"
     android:layout_marginTop="16dp"
     android:text="Created: "
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_course_name" />

 <TextView
     android:id="@+id/tv_course_publisher_name"
     android:layout_width="104dp"
     android:layout_height="wrap_content"
     android:layout_marginLeft="16dp"
     android:textColor="@color/colorAccent"
     android:layout_marginTop="12dp"
     android:text="Created by: "
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_course_creation_date" />


 <Button
     android:id="@+id/btnShowCourseAlbums"
     style="@android:style/Widget.Holo.Button.Small"
     android:layout_width="wrap_content"
     android:layout_height="47dp"
     android:layout_marginLeft="120dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="44dp"
     android:background="@drawable/btn_rounded"
     android:onClick="onDisplayCourseAlbumsClick"
     android:text="Show Albums"
     app:layout_constraintHorizontal_bias="0.712"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_course_publisher_name" />

 <Button
     android:id="@+id/btnAddCourseAlbum"
     style="@android:style/Widget.Holo.Button.Small"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="16dp"
     android:layout_marginTop="44dp"
     android:background="@drawable/btn_rounded"
     android:onClick="onActionButtonClick"
     android:text="Add Albums"
     app:layout_constraintHorizontal_bias="0.525"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/btnShowCourseAlbums"
     app:layout_constraintTop_toBottomOf="@+id/tv_course_publisher_name" />

 <Button
     android:id="@+id/onCreateInfoBackBtnClick"
     style="@android:style/Widget.Holo.Button.Small"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="8dp"
     android:background="@drawable/btn_rounded"
     android:onClick="onCreateInfoBackButtonClick"
     android:text="Back"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.872" />


</android.support.constraint.ConstraintLayout>
