<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galbenabu1.classscanner.Activities.HomeActivity">

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="89dp"
        android:layout_height="53dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Hello "
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWatchCourses"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onViewMyCoursesClick"
        android:text="View My Courses"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTmpTakePic" />

    <Button
        android:id="@+id/btnAddNewCourse"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onCreateNewCourseClick"
        android:text="Add New Course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWatchCourses" />

    <Button
        android:id="@+id/btnSearchExsistsCourse"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:onClick="onSearchCoursesClick"
        android:text="Search For Existing Course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddNewCourse" />

    <Button
        android:id="@+id/btnSuggestedCourses"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:onClick="onSuggestedCoursesClick"
        android:text="Show Suggested Courses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrivateAlbums" />

    <Button
        android:id="@+id/btnPrivateAlbums"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onShowPrivateAlbumsClick"
        android:text="My Private Albums"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchExsistsCourse" />

    <Button
        android:id="@+id/btnSignOut"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginTop="12dp"
        android:onClick="onSignoutClick"
        android:text="Signout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSuggestedCourses" />

    <Button
        android:id="@+id/btnTmpTakePic"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onTmpTakePicClick"
        android:text="Take Pictures"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGreeting" />
</android.support.constraint.ConstraintLayout>
