<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galbenabu1.classscanner.Activities.TakePicActivity">

    <TextureView
        android:id="@+id/bestTextureView"
        android:layout_width="match_parent"
        android:layout_height="317dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnClearPicturesTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:onClick="onClearPicturesTakenClick"
        android:text="Restart"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bestTextureView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnTakeAPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/bestTextureView"
        app:layout_constraintRight_toLeftOf="@+id/btnFinishTakingPictures"
        app:layout_constraintLeft_toRightOf="@+id/btnClearPicturesTaken" />

    <Button
        android:id="@+id/btnFinishTakingPictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:onClick="onFinishTakingPictures"
        android:text="Finish"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bestTextureView"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/ivSavedPic"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bestTextureView"
        app:srcCompat="@android:color/holo_orange_dark" />

</android.support.constraint.ConstraintLayout>
