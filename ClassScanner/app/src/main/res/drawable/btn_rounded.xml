<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">

    <shape android:shape="rectangle">
        <gradient android:angle="135" android:endColor="@color/dark_pink" android:startColor="@color/light_pink" />
        <corners android:radius="20dp" />
        <stroke android:width="4dp" android:color="@android:color/black" />
    </shape>

</item>

<item>
    <shape android:shape="rectangle">
        <gradient android:angle="225" android:endColor="@color/light_pink" android:startColor="@color/dark_pink" />
        <corners android:radius="20dp" />
        <corner android:radius="8dp"/>
        <stroke android:width="4dp" android:color="@android:color/black" />
    </shape>

</item>
</selector>


